#!/bin/bash

# TODO:
# - filter out stuff from /etc/portage/package.use
# - add expanded flags to filter list
# - add options: quiet, keep minus, force caching
# - add enable/disable/prune with alphabetical sorting
# - add config files to manually filter out stuff
# - doc, manpage

source /lib/gentoo/functions.sh

#
# Verify the EXPAND_USE flag is valid, i.e. in the EXPANDS list
# $1: the USE_EXPAND to verify
#
check_expand() {
	if [[ $(echo "${EXPANDS}" | grep "^${1:-USE}$") ==  "" ]]; then
		eerror "${1} is not a valid USE_EXPAND"
	fi
}

echo_list() {
	if [[ $1 != "" ]]; then
		if yesno ${IN_COLUMN}; then
			echo -n "${1}"
		else
			echo -n ${1}
		fi
		echo
	fi
}

execute() {
	check_expand ${2}
	${1} ${2:-USE}
}

filter_expands() {
	echo "${PACKAGES}" | grep " ${1}=" | sed "s/^\([^ ]*\).* ${1}=\"\([^\"]*\).*/\1 \2 /" | sed 's/::[A-Za-z0-9-]*//g;s/%//g;s/[ \"]([^)]*)//g;s/[ \"]{[^}]*}//g'
}

list_all_flags() {
	echo "$(filter_expands ${1})" | cut -d " " -f 2- | tr " " "\n" | sort -u | grep -v "^$"
}

list_flags() {
	local filtered makeconf_flags flag
	filtered="$(filter_expands ${1})"
	makeconf_flags=$(source /etc/portage/make.conf; echo "${!1}")
	for flag in ${makeconf_flags}; do
		filtered=$(echo "${filtered}" | sed "s/ ${flag} / /")
	done
	echo "${filtered}" | cut -d " " -f 2- | tr " " "\n" | sort -u | grep -v "^$"
}

enabled() {
	grep -v "^-"
}

disabled() {
	grep "^-"
}

list_enabled() {
	echo_list "$(list_flags ${1:-USE} | enabled)"
}

list_disabled() {
	echo_list "$(list_flags ${1:-USE} | disabled)"
}


EINFO_QUIET=no
IN_COLUMN=no

if [[ ! -f /tmp/USEful-emerge-output ]]; then
	ebegin "Caching @world"
	emerge -vpe @world > /tmp/USEful-emerge-output 2>&1
	eend
fi
PACKAGES=$(sed -n '/="/s/^\[[^]]*] \(.*\) [0-9]* KiB/\1/p' /tmp/USEful-emerge-output)
EXPANDS=$(echo "${PACKAGES}" | sed -n 's/^[^=]* \([A-Z0-9_]*="\)/\1/;s/\([A-Z0-9_]*\)="[^"]*"/\1/g;s/ /\n/gp' | sort -u)

case ${1} in
enabled)
	execute list_enabled ${2};;
disabled)
	execute list_disabled ${2};;
expands)
	echo_list "${EXPANDS}";;
flags)
	check_expand ${2}
	echo_list "$(list_flags ${2})";;
all-flags)
	check_expand ${2}
	echo_list "$(list_all_flags ${2})";;
packages)
	echo "${PACKAGES}"
esac
